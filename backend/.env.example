# Configuration Railway Backend

# Environnement
NODE_ENV=production
PORT=3000

# MongoDB Atlas (OBLIGATOIRE)
# Format: mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_URI=mongodb+srv://votre_user:votre_password@cluster0.xxxxx.mongodb.net/securechat?retryWrites=true&w=majority

# JWT
JWT_SECRET=votre_secret_jwt_super_securise_changez_moi
JWT_EXPIRE=7d

# Cloud Storage (Optionnel - pour les fichiers)
AWS_ACCESS_KEY_ID=votre_access_key
AWS_SECRET_ACCESS_KEY=votre_secret_key
AWS_REGION=eu-west-1
S3_BUCKET_NAME=securechat-files
S3_ENDPOINT=https://s3.eu-west-1.amazonaws.com

# Upload
MAX_FILE_SIZE=52428800
CHUNK_SIZE=5242880

# Frontend URL (Optionnel)
CLIENT_URL=https://votre-frontend.up.railway.app
FRONTEND_URL=https://votre-frontend.up.railway.app